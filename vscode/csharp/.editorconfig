root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf

[*.cs]
indent_style = space
indent_size = 2          # Google スタイル: インデントは 2 スペース&#8203;:contentReference[oaicite:2]{index=2}
max_line_length = 100    # Google スタイル: 列幅制限は 100&#8203;:contentReference[oaicite:3]{index=3}

# using ディレクティブの順序 (System を先頭、グループ分け)
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# var の使用:
# - 型が明白な場合のみ var を推奨。それ以外（基本型や型が不明瞭な場合）は明示的型指定を推奨&#8203;:contentReference[oaicite:4]{index=4}
dotnet_style_var_for_built_in_types = false:suggestion
dotnet_style_var_when_type_is_apparent = true:suggestion
dotnet_style_var_elsewhere = false:suggestion

# 波括弧と改行:
csharp_new_line_before_open_brace = none    # 開き波括弧は同じ行に（K&R スタイル）&#8203;:contentReference[oaicite:5]{index=5}
csharp_new_line_before_else = false        # else は前行の閉じ括弧と同じ行に
csharp_prefer_braces = true:suggestion     # 括弧は省略せず常に使用&#8203;:contentReference[oaicite:6]{index=6}

# スペースのルール:
csharp_space_after_keywords_in_control_flow_statements = true  # if/for 等のキーワード後にスペースを置く&#8203;:contentReference[oaicite:7]{index=7}
csharp_space_after_comma = true
csharp_space_before_comma = false
csharp_space_after_dot = false
csharp_space_before_dot = false
csharp_space_around_binary_operators = before_and_after  # 演算子の前後に 1 スペース
csharp_space_before_colon_in_inheritance_clause = true
csharp_space_after_colon_in_inheritance_clause = true

csharp_space_between_method_declaration_name_and_open_parenthesis = false
csharp_space_between_method_call_name_and_opening_parenthesis = false
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_between_method_declaration_empty_parameter_list_parentheses = false
csharp_space_between_method_call_empty_parameter_list_parentheses = false
